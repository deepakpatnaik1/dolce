{
  "typography": {
    "bodyFont": "iA Writer Quattro V",
    "codeFont": "Menlo",
    "fontSize": {
      "xs": 9,
      "sm": 10,
      "md": 11,
      "base": 12,
      "lg": 14,
      "xl": 15,
      "xxl": 16,
      "xxxl": 18,
      "display": 20,
      "giant": 64
    }
  },
  "layout": {
    "padding": {
      "containerPadding": 32
    },
    "margins": {},
    "sizing": {
      "contentWidth": 592,
      "windowWidth": 1000,
      "windowHeight": 700
    },
    "chrome": {
      "titleBarHeight": 28,
      "containerPadding": 16,
      "controlsRowHeight": 40,
      "textInternalPadding": 24
    },
    "fallbacks": {
      "minTextHeight": 200,
      "defaultWindowHeight": 400
    }
  },
  "glassmorphic": {
    "transparency": {
      "inputBackground": 0.85,
      "borderTop": 0.3,
      "borderBottom": 0.1,
      "placeholder": 0.25,
      "controls": 0.7,
      "dropZoneBackground": 0.3,
      "dropZoneCenter": 0.6
    },
    "gradients": {
      "borderColors": ["white", "white"],
      "borderOpacities": [0.3, 0.1]
    },
    "shadows": {
      "innerGlow": {
        "color": "white",
        "opacity": 0.08,
        "radius": 8,
        "x": 0,
        "y": -2
      },
      "outerShadow": {
        "color": "black",
        "opacity": 0.4,
        "radius": 12,
        "x": 0,
        "y": 4
      },
      "greenGlow": {
        "radius1": 4,
        "radius2": 8,
        "opacity": 0.5
      }
    }
  },
  "elements": {
    "inputBar": {
      "cornerRadius": 12,
      "padding": 16,
      "textPadding": 20,
      "topPadding": 12,
      "bottomPadding": 12,
      "minHeight": 22,
      "maxHeight": 300,
      "lineHeight": 17,
      "placeholderText": "Ask anything...",
      "fontSize": 12,
      "placeholderPaddingHorizontal": 20,
      "controlsSpacing": 12,
      "defaultTextHeight": 22
    },
    "scrollback": {
      "bodyFontSize": 12,
      "authorFontSize": 10,
      "fallbackColor": {"red": 0.3, "green": 0.5, "blue": 0.8},
      "highlight": {
        "fillOpacity": 0.03,
        "borderOpacityMultiplier": 0.5,
        "shadowOpacityMultiplier": 0.3,
        "shadowRadiusMultiplier": 0.5,
        "borderWidth": 0.5,
        "shadowOffsetY": -1
      },
      "authorLabel": {
        "minimalBadge": {
          "backgroundColor": 0.15,
          "cornerRadius": 8,
          "accentColors": {
            "boss": {"red": 0.4, "green": 0.7, "blue": 0.9},
            "claude": {"red": 0.9, "green": 0.7, "blue": 0.5},
            "samara": {"red": 0.5, "green": 0.8, "blue": 0.6},
            "vanessa": {"red": 0.8, "green": 0.6, "blue": 0.4},
            "vlad": {"red": 0.7, "green": 0.5, "blue": 0.8},
            "lyra": {"red": 0.9, "green": 0.6, "blue": 0.9},
            "eva": {"red": 0.6, "green": 0.9, "blue": 0.8},
            "alicja": {"red": 0.8, "green": 0.8, "blue": 0.4},
            "sonja": {"red": 0.9, "green": 0.5, "blue": 0.6},
            "gunnar": {"red": 0.5, "green": 0.6, "blue": 0.9}
          }
        },
        "coloredBorder": {
          "borderWidth": 2,
          "backgroundColor": 0.05,
          "cornerRadius": 4
        },
        "softColorFill": {
          "cornerRadius": 6,
          "fillOpacity": 0.12
        }
      }
    },
    "buttons": {
      "plusSize": 24,
      "sendSize": 20,
      "indicatorSize": 8
    },
    "panes": {
      "spacing": 8,
      "compactSpacing": 4,
      "borderRadius": 8,
      "borderOpacity": 0.2,
      "borderWidth": 1,
      "topPadding": 20,
      "textOpacity": 0.8
    },
    "separators": {
      "width": 1,
      "glowRadius": 2,
      "topPadding": 16,
      "bottomPadding": 16
    }
  },
  "animations": {
    "paneTransition": {
      "response": 0.2,
      "dampingFraction": 0.8,
      "blendDuration": 0
    },
    "window": {
      "animationDuration": 0.25
    },
    "messageNavigation": {
      "scrollDuration": 0.3,
      "smoothScrollIncrement": 40,
      "smoothScrollDuration": 0.25
    },
    "textExpansion": {
      "response": 0.1,
      "dampingFraction": 0.8,
      "blendDuration": 0,
      "animationThreshold": 2
    }
  },
  "pane": {
    "widthFraction": 0.3333333333333333,
    "fallbackWidth": 400,
    "windowSizes": {
      "oneThird": 0.3333333333333333,
      "twoThirds": 0.6666666666666666,
      "full": 1.0
    }
  },
  "background": {
    "primary": {
      "red": 0.04,
      "green": 0.04,
      "blue": 0.05
    }
  },
  "opacity": {
    "text": {
      "primary": 1.0,
      "secondary": 0.9,
      "tertiary": 0.85,
      "quaternary": 0.8,
      "muted": 0.6,
      "emphasis": 0.95
    },
    "background": {
      "strong": 0.9,
      "medium": 0.6,
      "subtle": 0.3,
      "faint": 0.1,
      "ghost": 0.05
    },
    "border": {
      "strong": 0.5,
      "medium": 0.3,
      "subtle": 0.2,
      "faint": 0.1
    },
    "shadow": {
      "strong": 0.4,
      "medium": 0.3,
      "subtle": 0.2
    }
  }
}