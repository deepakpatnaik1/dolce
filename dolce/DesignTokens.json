{
  "typography": {
    "bodyFont": "iA Writer Quattro V",
    "codeFont": "Menlo"
  },
  "layout": {
    "padding": {
      "containerPadding": 32
    },
    "margins": {},
    "sizing": {
      "contentWidth": 592
    }
  },
  "glassmorphic": {
    "transparency": {
      "inputBackground": 0.85,
      "borderTop": 0.3,
      "borderBottom": 0.1,
      "placeholder": 0.25,
      "controls": 0.7
    },
    "gradients": {
      "borderColors": ["white", "white"],
      "borderOpacities": [0.3, 0.1]
    },
    "shadows": {
      "innerGlow": {
        "color": "white",
        "opacity": 0.08,
        "radius": 8,
        "x": 0,
        "y": -2
      },
      "outerShadow": {
        "color": "black",
        "opacity": 0.4,
        "radius": 12,
        "x": 0,
        "y": 4
      },
      "greenGlow": {
        "radius1": 4,
        "radius2": 8,
        "opacity": 0.5
      }
    }
  },
  "elements": {
    "inputBar": {
      "cornerRadius": 12,
      "padding": 16,
      "textPadding": 20,
      "topPadding": 12,
      "bottomPadding": 12,
      "minHeight": 22,
      "placeholderText": "Ask anything...",
      "fontSize": 12,
      "placeholderPaddingHorizontal": 20,
      "controlsSpacing": 12,
      "defaultTextHeight": 22
    },
    "scrollback": {
      "bodyFontSize": 12,
      "authorFontSize": 10,
      "highlight": {
        "fillOpacity": 0.03,
        "borderOpacityMultiplier": 0.5,
        "shadowOpacityMultiplier": 0.3,
        "shadowRadiusMultiplier": 0.5,
        "borderWidth": 0.5,
        "shadowOffsetY": -1
      },
      "authorLabel": {
        "minimalBadge": {
          "backgroundColor": 0.15,
          "cornerRadius": 8,
          "accentColors": {
            "boss": {"red": 0.4, "green": 0.7, "blue": 0.9},
            "vanessa": {"red": 0.8, "green": 0.6, "blue": 0.4},
            "vlad": {"red": 0.7, "green": 0.5, "blue": 0.8},
            "samara": {"red": 0.5, "green": 0.8, "blue": 0.6},
            "claude": {"red": 0.9, "green": 0.7, "blue": 0.5}
          }
        },
        "coloredBorder": {
          "borderWidth": 2,
          "backgroundColor": 0.05,
          "cornerRadius": 4
        },
        "softColorFill": {
          "cornerRadius": 6,
          "fillOpacity": 0.12
        }
      }
    },
    "buttons": {
      "plusSize": 24,
      "sendSize": 20,
      "indicatorSize": 8
    },
    "panes": {
      "spacing": 8,
      "debugSpacing": 4,
      "borderRadius": 8,
      "borderOpacity": 0.2,
      "borderWidth": 1,
      "topPadding": 20,
      "textOpacity": 0.8
    },
    "separators": {
      "width": 1,
      "glowRadius": 2,
      "topPadding": 16,
      "bottomPadding": 16
    }
  },
  "animations": {
    "paneTransition": {
      "response": 0.2,
      "dampingFraction": 0.8,
      "blendDuration": 0
    },
    "window": {
      "animationDuration": 0.25
    },
    "messageNavigation": {
      "scrollDuration": 0.3,
      "smoothScrollIncrement": 40,
      "smoothScrollDuration": 0.25
    }
  },
  "pane": {
    "widthFraction": 0.3333333333333333,
    "fallbackWidth": 400,
    "windowSizes": {
      "oneThird": 0.3333333333333333,
      "twoThirds": 0.6666666666666666,
      "full": 1.0
    }
  },
  "background": {
    "primary": {
      "red": 0.08,
      "green": 0.08,
      "blue": 0.09
    }
  }
}